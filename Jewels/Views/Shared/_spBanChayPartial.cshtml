@model IEnumerable<Jewels.Models.SanPham>

<style>
    .card-title > a {
        color: var(--bg5-color);
        font-weight: 400;
        font-size: 20px;
    }

    .card-text {
        font-weight: bold;
        color: var(--bg4-color);
        font-size: 24px;
    }

    .container-fluid.row.py-3 > h3 {
        float: left;
    }

    .container-fluid.row.py-3 > div {
        float: right;
    }

    .div_sp {
        display: flex;
        align-items: center;
        flex-direction: column;
        height: 294px;
        margin: 5px;
        padding: 5px;
        border-radius: 5px;
        background-image: linear-gradient(white, var(--bg1-color));
    }
</style>
<div class="container row">
    <h3 style="color: var(--bg5-color);" class="float-sm-start"> Sản phẩm bán chạy</h3>

    <div class="row">
        @if (Model.Count() != 0)
        {
            foreach (var i in Model.OrderByDescending(m => m.SanPhamID).ThenByDescending(m => m.SanPhamID).Where(m => m.BanChay == "Yes").Take(4).ToList())
            {
                <div class="col-sm-3 ">
                    <div class="div_sp">
                        <img class="card-img-top" src="@Url.Content(i.UrlHinhAnhSP)" style="height: 200px; width: 200px;" />

                        <div class="card-body" style="float: left;">
                            <h5 class="card-title"> @Html.ActionLink(i.SanPhamName, "Index", "ProductDetail", new { id = i.SanPhamID }, null) </h5>
                            <p class="card-text"> @i.GiaBan.ToString("#,##0") VNĐ </p>
                        </div>
                    </div>
                </div>
            }
        }
        <div class="row">
            <button type="button" class="btn" style="border: 1px solid var(--bg2-color); width: 20%; background-color: var(--bg1-color); margin: 20px auto ;">
                <a href="~/Home/spBanChay" style="color: var(--bg5-color)">Xem thêm  </a>
            </button>
        </div>
    </div>

</div>