@model Jewels.Models.HinhThucTT

@{
    ViewBag.Title = "Chỉnh sửa hình thức thanh toán";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chỉnh sửa</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.HinhThucTTID)

        <div class="form-group">
            @Html.LabelFor(model => model.HinhThucTTName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HinhThucTTName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HinhThucTTName, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group row">
            <div class="col-sm-3  mx-3">
                <input type="submit" value="Save" class="btn btn-default cre-btn" />
            </div>
            |
            <button class="btn btn-primary back-btn col-sm-3 mx-3">
                @Html.ActionLink("Back to List", "Index")
            </button>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
