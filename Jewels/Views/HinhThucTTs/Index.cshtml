@model IEnumerable<Jewels.Models.HinhThucTT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    body {
        overflow: auto;
    }

    div.container {
        font-size: 14px;
    }

    div.container-fluid.namecreate > div:first-child {
        float: left;
    }

    div.container-fluid.namecreate > div:last-child {
        float: right;
    }
</style>

<div class="container">
    <div class="container-fluid namecreate d-block">
        <div>
            <h2>Hình thức thanh toán </h2>
        </div>
        <div>
             <button type="button" class="btn new-btn ">
                    @Html.ActionLink("+ Thêm hình thức thanh toán", "Create")
             </button>
        </div>
    </div>

    <div class="dropdown" style="display : inline-block;">
        <button class="btn drop-btn dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Hình thức thanh toán
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a class="dropdown-item" href="/DonHangs/Index">All đơn hàng</a></li>
            <li><a class="dropdown-item" href="/DonHangs/DangXuLy">Đang xử lý</a></li>
            <li><a class="dropdown-item" href="/DonHangs/DangGiaoHang">Đang giao hàng</a></li>
            <li><a class="dropdown-item" href="/DonHangs/DaHoanThanh">Đã hoàn thành</a></li>
            <li><a class="dropdown-item" href="/TrangThaiDHs/Index">Trạng thái đơn hàng</a></li>
            <li><a class="dropdown-item" href="#">Hình thức thanh toán</a></li>
        </ul>   
    </div>

    <div class="container-fluid ">
        <div>
            <table class="table">
                <thead>
                    <tr class="row">
                        <th class="col-sm-3">Mã hình thức thanh toán</th>
                        <th class="col-sm-4 "> Hình thức thanh toán </th>
                        <th class="col-sm-2"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="row">
                            <td class="col-sm-3"> @item.HinhThucTTID </td>
                            <td class="col-sm-4"> @Html.DisplayFor(modelItem => item.HinhThucTTName) </td>
                            <td class="col-sm-2">
                                <div class="edit-delete-btn " style="display: inline-block;">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.HinhThucTTID }, new { @class = "btn" })
                                    <a style="color: white;">|</a>
                                    @Html.ActionLink("Delete", "Delete", new { id = item.HinhThucTTID }, new { @class = "btn" })
                                </div>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div><!-- /bg-content-->

</div>