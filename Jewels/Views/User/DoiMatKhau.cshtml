@model Jewels.Models.KhachHang

@{
    ViewBag.Title = "DoiMatKhau";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row justify-content-center">
        <h2 style="text-align: center; padding-top:40px;">Thay đổi mật khẩu </h2>
        <hr style=" height:2px;background-color: var(--bg5-color); width:10%;" />
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.KhachHangID)
        @Html.HiddenFor(model => model.TichLuy)
        @Html.HiddenFor(model => model.DienThoai)
        @Html.HiddenFor(model => model.Email)
        @Html.HiddenFor(model => model.DiaChi)

        <div class="form-group row">
            <h5 class="form-label col-sm-2">
                Khách hàng :
            </h5>
            <div class="col-sm-4">
                @Html.DisplayFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <h5 class="form-label col-sm-2">
                Mật khẩu :
            </h5>
            <div class="col-sm-4">
                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-1" style="background-color: #593E2B;text-align:center;border-radius:5px;">
                <input type="submit" value="Thay đổi" class="btn btn-default cre-btn" style="color: white; font-size:16px;" />
            </div>
        </div>
    </div>
    <br />
    }
</div>